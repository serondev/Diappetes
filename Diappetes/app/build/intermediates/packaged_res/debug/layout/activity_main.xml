<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    android:background="@drawable/background_diappetes"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_recent_values"
            android:layout_width="270dp"
            android:layout_height="58dp"
            android:layout_marginTop="45dp"
            android:text="Recent Values"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@color/custom_color_primary"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgRecentValue"
            android:layout_width="220dp"
            android:layout_height="200dp"
            android:layout_marginTop="45dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_recent_values"
            app:srcCompat="@drawable/recent_value" />

        <TextView
            android:id="@+id/tv_value"
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:text="150"
            android:textAlignment="center"
            android:textColor="@color/custom_color_primary"
            android:textSize="60sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imgRecentValue"
            app:layout_constraintEnd_toEndOf="@+id/imgRecentValue"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="@+id/imgRecentValue"
            app:layout_constraintTop_toTopOf="@+id/imgRecentValue"
            app:layout_constraintVertical_bias="0.460" />

        <ImageView
            android:id="@+id/imgDoctor"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="140dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.043"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgRecentValue"
            app:srcCompat="@drawable/doctor" />

        <TextView
            android:id="@+id/tv_doctor_name"
            android:layout_width="100dp"
            android:layout_height="15dp"
            android:layout_marginTop="150dp"
            android:text="Dr. Korhan Ertepe"
            android:textAlignment="center"
            android:textColor="@color/custom_color_black"
            android:textSize="12sp"
            app:cornerFamily="rounded"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imgDoctor"
            app:layout_constraintTop_toBottomOf="@+id/imgRecentValue" />

        <TextView
            android:id="@+id/tv_sensor_name"
            android:layout_width="100dp"
            android:layout_height="15dp"
            android:layout_marginTop="148dp"
            android:text="Freestyle Libre"
            android:textAlignment="center"
            android:textColor="@color/custom_color_black"
            android:textSize="12sp"
            app:cornerFamily="rounded"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.76"
            app:layout_constraintStart_toEndOf="@+id/tv_doctor_name"
            app:layout_constraintTop_toBottomOf="@+id/imgRecentValue" />

        <ImageView
            android:id="@+id/imgSensor"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="140dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.336"
            app:layout_constraintStart_toEndOf="@+id/tv_doctor_name"
            app:layout_constraintTop_toBottomOf="@+id/imgRecentValue"
            app:srcCompat="@drawable/sensor" />

        <Button
            android:id="@+id/button_call_doctor"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            android:backgroundTint="@color/custom_color_primary"
            android:text="Call Doctor"
            android:textAllCaps="false"
            android:textColor="@color/custom_color_white"
            app:icon="@drawable/phone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_doctor_name"
            app:layout_constraintVertical_bias="0.3" />

        <Button
            android:id="@+id/button_text_doctor"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:text="Text Doctor"
            android:textColor="@color/custom_color_white"
            android:textAllCaps="false"
            android:backgroundTint="@color/custom_color_primary"
            app:icon="@drawable/ic_baseline_sms_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.066"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_call_doctor"
            app:layout_constraintVertical_bias="0.644" />

        <Button
            android:id="@+id/button_other_devices"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:text="Other Devices"
            android:textAllCaps="false"
            android:textColor="@color/custom_color_white"
            android:backgroundTint="@color/custom_color_primary"
            app:icon="@drawable/scan"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintStart_toEndOf="@+id/button_text_doctor"
            app:layout_constraintTop_toBottomOf="@+id/button_scan_device"
            app:layout_constraintVertical_bias="0.644" />

        <Button
            android:id="@+id/button_scan_device"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:backgroundTint="@color/custom_color_primary"
            android:text="Scan Device"
            android:textAllCaps="false"
            android:textColor="@color/custom_color_white"
            app:icon="@drawable/scan"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toEndOf="@+id/button_call_doctor"
            app:layout_constraintTop_toBottomOf="@+id/tv_sensor_name"
            app:layout_constraintVertical_bias="0.308" />

        <ImageView
            android:id="@+id/imgOnline"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:layout_constraintBottom_toBottomOf="@+id/imgDoctor"
            app:layout_constraintEnd_toStartOf="@+id/imgSensor"
            app:layout_constraintHorizontal_bias="0.137"
            app:layout_constraintStart_toEndOf="@+id/tv_doctor_name"
            app:layout_constraintTop_toBottomOf="@+id/imgRecentValue"
            app:layout_constraintVertical_bias="0.898"
            app:srcCompat="@drawable/online_statue" />

        <ImageView
            android:id="@+id/imgOnline2"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:layout_constraintBottom_toBottomOf="@+id/imgSensor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/tv_sensor_name"
            app:layout_constraintTop_toBottomOf="@+id/imgRecentValue"
            app:layout_constraintVertical_bias="0.88"
            app:srcCompat="@drawable/online_statue" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"/>




</androidx.drawerlayout.widget.DrawerLayout>